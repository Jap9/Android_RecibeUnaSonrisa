<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/toggleButton2"
        android:background="#ff89cfff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="DONA, COMPARTE Y GESTIONA"
            android:id="@+id/text"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="47dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="27dp"
            android:textColor="@color/white" />

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/autoCompleteTextView"
            android:lines="1"
            android:maxLength="25"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/text"
            android:layout_alignStart="@+id/text"
            android:layout_alignRight="@+id/text"
            android:layout_alignEnd="@+id/text"
            android:hint="Â¿En que ciudad vives?"
            android:textStyle="bold"
            android:textSize="19dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <Button
            style="@android:style/Widget.DeviceDefault.Light.Button"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text=" "
            android:id="@+id/confirmar"
            android:layout_marginBottom="32dp"
            android:background="@drawable/continua2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/toggleButton2"
        android:background="#ffffffff">

        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:id="@+id/imageView"
            android:background="@drawable/sonrisagroc"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:id="@+id/imageView2"
            android:background="@drawable/bienvenidaa"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp" />

    </RelativeLayout>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton2"
        android:layout_marginTop="67dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

</RelativeLayout>