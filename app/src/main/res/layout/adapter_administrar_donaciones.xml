<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/linear_pedir"
    android:baselineAligned="true"
    android:background="@android:color/transparent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="#ff89cbff">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/foto_perfil"
            android:background="@drawable/perfil"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nombre"
            android:id="@+id/contact"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="apellido"
            android:id="@+id/nom"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton"
            android:layout_marginLeft="15dp"
            android:background="@drawable/tick"
            android:layout_marginTop="31dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/info"
            android:background="@drawable/cross"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="15dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff7fbaff"
        android:id="@+id/contacte"
        android:weightSum="1"
        android:baselineAligned="false"
        android:layout_weight="0.05">

        <TextView
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="DESCRIPCIÃ“N"
            android:id="@+id/descripcio"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Presto...."
            android:id="@+id/presto"
            android:layout_weight="0.13"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</LinearLayout>
