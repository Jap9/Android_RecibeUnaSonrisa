<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffeefffa">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="49dp">

            <TextView
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Comunidad - LLEIDA            "
                android:id="@+id/info"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:textColor="#ff6ab7ff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=" +2 sonrisas"
                android:id="@+id/sonrisas"
                android:textColor="#ff6ab7ff"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp" />

        </LinearLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/publicaciones"
            android:layout_weight="1"
            android:choiceMode="singleChoice" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREAR PUBLICACION"
            android:id="@+id/crear"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:background="#ff89c2ff" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PIDO"
                android:id="@+id/b"
                android:layout_gravity="bottom"
                android:visibility="visible" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DONO "
                android:id="@+id/a"
                android:layout_gravity="bottom"
                android:visibility="visible" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VER COMUNIDAD"
                android:id="@+id/ver"
                android:textColor="@color/white"
                android:background="#ffffca5c" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>