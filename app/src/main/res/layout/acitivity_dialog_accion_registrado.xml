<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="feelingprojects.recibeunasonrisa.DialogBienvenido"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Recibe Una Sonrisa"
        android:id="@+id/presto"
        android:textColor="#ff75d0ff"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Para realizar esta acciÃ³n debes estar registrado"
        android:id="@+id/usuarios"
        android:layout_below="@+id/presto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="REGISTRARME"
        android:id="@+id/registrarse"
        android:textColor="#ff94cefb"
        android:background="@color/no"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/usuarios"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="CANCELAR"
        android:id="@+id/cancelar"
        android:textColor="#fffb708b"
        android:background="@color/no"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/registrarse"
        android:layout_alignBottom="@+id/registrarse"
        android:layout_alignRight="@+id/presto"
        android:layout_alignEnd="@+id/presto" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView"
        android:layout_above="@+id/usuarios"
        android:layout_toLeftOf="@+id/presto"
        android:layout_toStartOf="@+id/presto"
        android:background="@drawable/sonrisagroc" />

</RelativeLayout>
