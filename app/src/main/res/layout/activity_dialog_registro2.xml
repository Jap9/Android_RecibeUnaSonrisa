<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="feelingprojects.recibeunasonrisa.DialogBienvenido"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Añadir una foto de perfil"
        android:id="@+id/presto"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:layout_marginBottom="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="¿Quieres tomarte una foto ahora  o seleccionar una de tu galeria?"
        android:id="@+id/usuarios"
        android:layout_below="@+id/presto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_marginRight="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMPORTAR "
        android:id="@+id/registrarse"
        android:layout_marginTop="10dp"
        android:textColor="#ff91d5fb"
        android:background="@color/no"
        android:layout_below="@+id/usuarios"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:textSize="15dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HACER FOTO"
        android:id="@+id/image"
        android:background="@color/no"
        android:textColor="#ff91d5fb"
        android:layout_toEndOf="@+id/registrarse"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginLeft="60dp"
        android:layout_alignTop="@+id/registrarse"
        android:layout_toRightOf="@+id/registrarse" />

</RelativeLayout>
