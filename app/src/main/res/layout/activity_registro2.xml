<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/A">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/relativeLayout"
        android:background="#ff91d5fb"
        android:id="@+id/A"
        android:clickable="false">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:id="@+id/finalizar"
            android:layout_marginBottom="27dp"
            android:background="@drawable/continua2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/text_vision"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/finalizar"
            android:layout_marginTop="39dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:hint="Tu visión sobre el mundo..."
            android:maxLines="3" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/relativeLayout"
        android:layout_alignBottom="@+id/checkBox"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="AÑADE UNA FOTO"
            android:id="@+id/presto"
            android:layout_marginBottom="21dp"
            android:textColor="#ff91d5fb"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="25dp" />

        <ImageView
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:id="@+id/picture"
            android:background="@drawable/mes"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp" />

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:indeterminate="false"
            android:visibility="invisible"
            android:layout_alignBottom="@+id/picture"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New CheckBox"
        android:id="@+id/checkBox"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="209dp"
        android:visibility="invisible" />

</RelativeLayout>