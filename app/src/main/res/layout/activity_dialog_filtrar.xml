<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="feelingprojects.recibeunasonrisa.DialogBienvenido"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="¿Qué comunidades quieres mostrar?"
        android:id="@+id/presto"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:textColor="#ff7cc0ff"
        android:textSize="22dp"
        android:layout_marginBottom="7dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="FILTRAR"
        android:id="@+id/registrarse"
        android:textColor="#ffabfb84"
        android:background="@color/no"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/checkBox3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soy miembro"
        android:id="@+id/checkBox"
        android:layout_below="@+id/presto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/black"
        android:checked="true"
        android:layout_marginTop="10dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favoritas"
        android:id="@+id/checkBox2"
        android:textColor="@color/black"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soy administrador"
        android:id="@+id/checkBox3"
        android:layout_below="@+id/checkBox2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/black"
        android:checked="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="CANCELAR"
        android:id="@+id/cancelar"
        android:textColor="#fffb9aa9"
        android:background="@color/no"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_toEndOf="@+id/checkBox2"
        android:layout_alignTop="@+id/registrarse"
        android:layout_toRightOf="@+id/checkBox2" />

</RelativeLayout>
